<div class="panel panel-success">
  <div class="panel-heading">
    <div class="messe">メッセージ一覧</div>
  </div>
    
  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-default"><%= message.name %></span>
      <span class="label label-default"><%= message.age %></span>
      <%= message.body %>
      (<%= link_to "編集" , edit_message_path(message) %>)
      <%= link_to "削除" , message , method: :delete, data: { confirm: '削除してもよろしいですか？' } %>
      <br>
    <% end %>
    
    
    
    <%= render 'form' %>

    
  </div>


 